{
    "name": "Greek lexicon & word study",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "description": "Ancient Greek lexicon which shows forms tables for verbs, allows words lookup by doubleclicking and more.",
    "permissions": [
        "tabs"
    ],
    "browser_action": {
        "default_popup": "pages/popup.html"
    },
    "background": {
        "scripts": ["background.js", "lexicon.js",
            "lib/jquery.min.js", "lib/include.js", "lib/greek.js",
            "data/forms.js", "data/meanings.js"],
        "persistent": true
      },
    "content_scripts": [
        {
            "matches": [
              "<all_urls>"
            ],
            "js": ["lib/jquery.min.js", "content-scripts/content.js"]
        }
    ],
    "web_accessible_resources": [
        "images/*.jpeg"
    ],
    "default_locale": "ru"
}
